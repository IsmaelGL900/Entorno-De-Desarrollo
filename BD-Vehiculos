-- Crear tabla CLIENTES
CREATE TABLE clientes (
    NIF VARCHAR2(9) PRIMARY KEY,
    NyA VARCHAR2(50) NOT NULL,
    Direccion VARCHAR2(50) NOT NULL,
    Poblacion VARCHAR2(50) NOT NULL
);

